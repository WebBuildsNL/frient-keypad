{
  "title": {
    "en": "An action button was pressed",
    "nl": "Er is een actieknop ingedrukt"
  },
  "hint": {
    "en": "Triggers when a lock, unlock, home, or night button is pressed on the keypad, with or without a PIN code.",
    "nl": "Wordt geactiveerd wanneer een vergrendel-, ontgrendel-, thuis- of nachtknop wordt ingedrukt op het keypad, met of zonder pincode."
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=keypad"
    }
  ],
  "tokens": [
    {
      "name": "code",
      "type": "string",
      "title": {
        "en": "PIN code",
        "nl": "Pincode"
      },
      "example": "1234"
    },
    {
      "name": "action",
      "type": "string",
      "title": {
        "en": "Action",
        "nl": "Actie"
      },
      "example": "disarm"
    },
    {
      "name": "zone_id",
      "type": "number",
      "title": {
        "en": "Zone ID",
        "nl": "Zone ID"
      },
      "example": 23
    },
    {
      "name": "code_valid",
      "type": "boolean",
      "title": {
        "en": "Code is valid",
        "nl": "Code is geldig"
      }
    },
    {
      "name": "code_name",
      "type": "string",
      "title": {
        "en": "Code name",
        "nl": "Codenaam"
      },
      "example": "Guest 1"
    },
    {
      "name": "code_status",
      "type": "string",
      "title": {
        "en": "Code status",
        "nl": "Codestatus"
      },
      "example": "valid"
    }
  ]
}
